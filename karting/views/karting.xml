<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="racer_form_view" model="ir.ui.view">
            <field name="name">karting.racer.form</field>
            <field name="model">karting.racer</field>
            <field name="arch" type="xml">
                <form string="racer">
                    <sheet>
                        <div class="oe_title">
                            <label for="first name"/>
                            <h1>
                                <field name="example_title" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="example_field"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="racer_tree_view" model="ir.ui.view">
            <field name="name">karting.racer.tree</field>
            <field name="model">karting.racer</field>
            <field name="arch" type="xml">
                <tree string="racer">
                    <field name="create_date"/>
                    <field name="example_field"/>
                </tree>
            </field>
        </record>

        <record id="racer_search_view" model="ir.ui.view">
            <field name="name">karting.racer.search</field>
            <field name="model">karting.racer</field>
            <field name="arch" type="xml">
                <search string="racer">
                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="example_field" domain="[]"
                                context="{'group_by':'example_field'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="racer_act_window" model="ir.actions.act_window">
            <field name="name">racer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">karting.racer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new racer.
                </p>
            </field>
        </record>

        <menuitem name="racer" id="racer_menu" parent="your_root_menu" action="racer_act_window"/>

    </data>
</odoo>