<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_form_llibre_form" model="ir.ui.view">
            <field name="name">Libro Task Form</field>
            <field name="model">libro.task</field>
            <field name="inherit_id" ref="libro_app.view_form_todo_task"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="isbn"/>
                            </group>
                            <group name="group_right">
                                <field name="name"/>
                                <field name="autor"/>
                                <field name="paginas"/>
                                <field name="precio"/>
                            </group>
                        </group>
                        <group name="group_bottom">
                            <group name="group_left">
                                <field name="fecha"/>
                                <field name="revisado"/>
                            </group>
                            <group name="group_right">
                                <field name="categoria"/>
                                <field name="aprobado"/>
                                <field name="resumen"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_libro_task_inherited" model="ir.ui.view">
            <field name="name">Libro Task tree â€“ Categoria extension</field>
            <field name="model">libro.task</field>
            <field name="inherit_id" ref="libro_app.view_tree_libro_task"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="categoria"/>
                </field>
                <field name="name" position="after">
                    <field name="precio"/>
                </field>
                <field name="name" position="after">
                    <field name="aprobado"/>
                </field>
            </field>
        </record>
        <act_window
                id="action_categoria_list"
                name="Categorias"
                res_model="libro.categoria"
                view_mode="tree,form"
        />
        <act_window
                id="action_categoria_list_custom"
                name="Libro lista nuevo"
                res_model="libro.categoria"
                view_mode="tree,form"
        />
        <menuitem
                id="menu_categorias"
                name="Categorias"
                parent="libro_app.menu_libro_task"
                sequence="20"
                action="action_categoria_list"
        />
        <menuitem
                id="libro_list_custom"
                name="Libro lista nuevo"
                parent="libro_app.menu_libro_task"
                sequence="20"
                action="action_categoria_list_custom"
        />
    </data>
</odoo>